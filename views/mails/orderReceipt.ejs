<body class="body"
  style=" font-family: 'Poppins', sans-serif; padding:0 !important; margin:0 auto !important; display:block !important; min-width:100% !important; width:100% !important; background:#e7d3f7; -webkit-text-size-adjust:none;">
  <div style="width: 600px; background: #fff; padding: 20px 0; margin: 0 auto; max-width: 100%;">
    <!----- top----->
    <div class="" style="text-align: center;">
      <img src="<%= appURL %>mails/orderReceipt/logo.png" style="width: 150px;">
    </div>

    <div class="order_confirm" style="text-align: center;margin-top: 15px;position: relative;padding: 0 30px;">
			<img src="<%= appURL %>mails/orderReceipt/order.png" style="/*! width: 150px; */max-width: 100%;">
			<!-- <div style="position: absolute;top: 18%;text-align: center;transform: translateX(-50%);left: 50%; width: 100%;">
				<p style="color: #5a6466;font-size: 12px;">  Your order will be delivered to</p>	
				 <h6 style="font-size: 14px;margin: 10px 0;color: #5a6466;text-decoration: underline; font-weight:500"> 14th Street, Fire Trail Road, Bahamas</h6>
			</div> -->
		</div>

    <!-- <div class="order_confirm" style="text-align: center;margin-top: 15px;position: relative;padding: 0 30px;">
      <img src="order.png" style="/*! width: 150px; */max-width: 100%;">
      <div style="position: absolute;top: 18%;text-align: center;transform: translateX(-50%);left: 50%; width: 100%;">
        <p style="color: #5a6466;font-size: 12px;"> Your order will be delivered to</p>
        <h6 style="font-size: 14px;margin: 10px 0;color: #5a6466;text-decoration: underline; font-weight:500"> 14th
          Street, Fire Trail Road, Bahamas</h6>
      </div>
    </div> -->

    <div class="order_details_new" style="padding: 30px 30px 15px;float: left;width: 100%;box-sizing: border-box;">
      <p style="float: left;width: 33%;font-size: 14px;font-weight: 500;margin-bottom: 4px !important;"> Date of Order:
      </p> <span style="width: 67%;float: left;font-size: 14px;margin-bottom: 4px;">
        <%= order.orderDate; %>
      </span>
      <p style="float: left;width: 33%;font-size: 14px;font-weight: 500;margin-bottom: 4px !important;"> Restaurant Name
        : </p> <span style="width: 67%;float: left;font-size: 14px;margin-bottom: 4px;">
        <%= restaurant.name; %>
      </span>
      <p style="float: left;width: 33%;font-size: 14px;font-weight: 500;margin-bottom: 4px !important;"> Restaurant
        Email: </p> <span style="width: 67%;float: left;font-size: 14px;margin-bottom: 4px;">
        <%= restaurant.email; %>
      </span>
      <p style="float: left;width: 33%;font-size: 14px;font-weight: 500;margin-bottom: 4px !important;"> Restaurant
        Address: </p> <span style="width: 67%;float: left;font-size: 14px;margin-bottom: 4px;">
        <%= restaurant.address; %>
      </span>

      <p style="float: left;width: 33%;font-size: 14px;font-weight: 500;margin-bottom: 4px !important;"> Restaurant
        Phone Number: </p> <span style="width: 67%;float: left;font-size: 14px;margin-bottom: 4px;">
        <%= restaurant.phone; %>
      </span>
    </div>




    <% if (isAddress) { %>
      <div style="float: left;width: 100%;padding: 0 30px 15px;box-sizing: border-box;">
        <p style="font-size: 14px;text-align: center;">
          <%= address.firstName + ' ' + address.lastName; %>, your order will be delivered to
        </p>
        <p style="font-size: 14px;text-align: center;margin-top: 8px !important;">
          <%= address.address; %>
        </p>
      </div>
      <% } %>


    <div class="order_total" style="text-align: center;padding: 0px 60px;">
      <h2 style="padding: 30px 0;border-bottom: 2px solid #f6f6f6;font-weight: 600;"> Order Number #<%= order.id; %>
      </h2>

      <% let total=0; total +=Number(order.tip); total +=Number(order.tax); total +=order.isDelivery==0 ?
        Number(order.serviceFeePercentage) : Number(order.serviceFee); total +=Number(order.deliveryFee); total
        +=Number(order.cartFee); total +=Number(order.promoDiscount); for (let i in orderDetails) { const
        orderDetail=orderDetails[i]; total +=Number(orderDetail.price); %>


        <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;">

          <%= orderDetail.quantity + '' + orderDetail.itemName; %>
            <span style="float: right;font-weight: 700;"> $<%= orderDetail.price; %> </span>
        </p>
        <% } %>


          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;"> Driver
            Tip
            <span style="float: right;font-weight: 700;"> $<%= order.tip; %> </span>
          </p>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;"> Vat
            Fee
            <span style="float: right;font-weight: 700;"> $<%= order.tax; %> </span>
          </p>
          <%
            if (order.paymentMethod == 2) {
          %>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;">
            Paypal Fee
            <span style="float: right;font-weight: 700;"> $<%= paypalFee; %> </span>
          </p>
          <%
            }
          %>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;">
            Service Fee
            <span style="float: right;font-weight: 700;"> $<%= order.serviceFee; %> </span>
          </p>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;">
            Delivery Charges
            <span style="float: right;font-weight: 700;"> $<%= order.deliveryFee; %> </span>
          </p>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;"> Cart
            Fees
            <span style="float: right;font-weight: 700;"> $<%= order.cartFee; %> </span>
          </p>
          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;"> Promos
            <span style="float: right;font-weight: 700;"> -$<%= order.promoDiscount; %> </span>
          </p>

          <p style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-size: 14px;"> Sub
            Total
            <span style="float: right;font-weight: 700;"> $<%= order.totalAmount; %> </span>
          </p>


          <p
            style="color: #606060;text-align: left;width: 100%;margin-bottom: 20px !important;font-weight: 700;border-top: 2px solid #f6f6f6;border-bottom: 2px solid #f6f6f6;padding: 25px 0 !important;">
            Order Total <span style="float: right;font-weight: 700;"> $<%= order.netAmount; %> </span> </p>
    </div>

    <!-- <div style="text-align: center;padding: 20px 0;">
      <a href=""
        style="background: #6db762;color: #fff;padding: 12px 30px;font-size: 14px;font-weight: 700;display: inline-block;">
        Track your order </a>
    </div> -->

    <div style="padding: 20px;box-shadow: 0 0 5px #c8bdbd;width: 75%;margin: 50px auto;display: flex;">
      <div style="">
        <img src="<%= appURL %>mails/orderReceipt/user.png"
          style="/*! float: left; *//*! max-width: 100%; */width: 70px;">
      </div>
      <div style="margin-left: 25px;">
        <h6 style="margin: 0;margin-bottom: 12px;font-size: 16px;">Need help with your order?</h6>
        <p style="font-size: 15px;color: #606060;"> Contact our tem for live support
          <a href="http://m.me/bahamaeats?ref=2062529467381132"
            style="background: #01b5b4;color: #fff;font-size: 11px;text-transform: uppercase;border-radius: 2px;margin-left: 8px;padding: 3px 20px;display: inline-block;">
            Start </a>
        </p>
      </div>
    </div>

    <!---- footer----->
    <div style="padding: 25px;margin: 0 auto;background: #f0f0f0;text-align: center;">
      <div class="social" style="width: 33%;margin: 0 auto;padding-bottom: 20px;border-bottom: 1px solid #bbb;">

        <a href="https://www.facebook.com/bahamaeats">
          <img src="<%= appURL %>mails/orderReceipt/fb.png" style="width: 30px;margin-right: 25px !important;">
        </a>
        <a href="https://www.instagram.com/bahamaeats">
          <img src="<%= appURL %>mails/orderReceipt/insta.png" style="width: 30px;margin-right: 25px !important;">
        </a>
        <a href="https://twitter.com/bahamaeats">
          <img src="<%= appURL %>mails/orderReceipt/tw.png" style="width: 30px;/*! margin-right: 20px !important; */">
        </a>
      </div>

      <div style="padding: 20px;">
        <p style="font-size: 11px;color: #a1a1a1;"> Bahama Eats Ltd. Prince Charles Dr Nassau, Bahamas </p>
        <p style="font-size: 11px;margin-top: 15px !important;"> <a
            style="padding: 0px 10px;border-right: 1px solid #bbb;color: #a1a1a1;"> Privacy </a> <a
            style="padding: 0px 10px;color: #a1a1a1;"> Privacy </a> </p>
      </div>

      <div>
        <a href="https://apps.apple.com/in/app/bahama-eats-food-delivery/id1470039780" style="margin-right: 5px;"> <img
            src="<%= appURL %>mails/orderReceipt/app_store.png" style="width: 110px;"> </a>
        <a href="https://play.google.com/store/apps/details?id=com.bahameats"> <img
            src="<%= appURL %>mails/orderReceipt/play_store.png" style="width: 110px;"> </a>
      </div>

    </div>


  </div>

